
@{
    ViewData["Title"] = "Create / Edit";
}

@model TrackCalories.Models.Calories

<div class="text-center">
    <h1 class="display-4">Create or Edit calories</h1>
</div>

<form asp-controller="Home" asp-action="CreateEditCaloriesForm">
    <label>Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id" />
    <label>Value </label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" />
    <label>Description</label>
    <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" />

    <button class="btn btn-primary mt-4" type="submit">Add</button>
</form>
